	"$(INTDIR)\xlat.obj" \
!if defined(X86) && !defined(DISABLE_WOW64_HOOK)
	"$(INTDIR)\hook_wow64.obj"
!endif

UCD_OBJS=\
	"$(INTDIR)\prmem.obj" \
	"$(INTDIR)\CharDistribution.obj" \
	"$(INTDIR)\JpCntx.obj" \
	"$(INTDIR)\LangBulgarianModel.obj" \
